<Application x:Class="RiftLauncher.App"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="clr-namespace:RiftLauncher"
			 Startup="OnStartup">
	<Application.Resources>
        <ResourceDictionary>
            <Style BasedOn="{StaticResource {x:Type ProgressBar}}" TargetType="ProgressBar">
				<Setter Property="Background" Value="#a22200"/>
				<Setter Property="Foreground" Value="#ff6e02"/>
			</Style>
		</ResourceDictionary>
	</Application.Resources>
</Application>
